{
  "tables": [
    {
      "name": "departments",
      "description": "Stores information about company departments.",
      "columns": {
        "id": { "type": "uuid", "primaryKey": true, "default": "random" },
        "name": {
          "type": "varchar",
          "length": 255,
          "notNull": true,
          "unique": true
        },
        "created_at": {
          "type": "timestamp",
          "withTimezone": true,
          "default": "now",
          "notNull": true
        }
      }
    },
    {
      "name": "positions",
      "description": "Stores job positions and their associated departments.",
      "columns": {
        "id": { "type": "uuid", "primaryKey": true, "default": "random" },
        "title": {
          "type": "varchar",
          "length": 255,
          "notNull": true,
          "unique": true
        },
        "department": {
          "type": "uuid",
          "notNull": true,
          "references": "departments.id",
          "onDelete": "cascade"
        },
        "created_at": {
          "type": "timestamp",
          "withTimezone": true,
          "default": "now",
          "notNull": true
        }
      }
    },
    {
      "name": "payroll",
      "description": "Manages employee payroll details including salary, bonuses, and deductions.",
      "columns": {
        "id": { "type": "uuid", "primaryKey": true, "default": "random" },
        "employee": {
          "type": "uuid",
          "notNull": true,
          "references": "employees.id"
        },
        "base_salary": { "type": "integer", "notNull": true },
        "bonus": { "type": "integer", "notNull": true },
        "deductions": { "type": "integer", "notNull": true },
        "net_salary": { "type": "integer", "notNull": true },
        "currency": {
          "type": "enum",
          "values": ["USD", "BDT"],
          "notNull": true
        },
        "created_at": {
          "type": "timestamp",
          "withTimezone": true,
          "default": "now"
        }
      }
    },
    {
      "name": "leave_management",
      "description": "Tracks employee leave requests and their statuses.",
      "columns": {
        "id": { "type": "uuid", "primaryKey": true, "default": "random" },
        "employee": {
          "type": "uuid",
          "references": "employees.id",
          "onDelete": "cascade"
        },
        "leave_type": {
          "type": "enum",
          "values": [
            "vacation",
            "sick_leave",
            "parental_leave",
            "medical_leave"
          ],
          "notNull": true
        },
        "start_date": { "type": "date", "notNull": true },
        "end_date": { "type": "date", "notNull": true },
        "status": {
          "type": "enum",
          "values": ["approved", "pending", "rejected"],
          "notNull": true
        },
        "created_at": {
          "type": "timestamp",
          "withTimezone": true,
          "default": "now"
        }
      }
    },
    {
      "name": "job_openings",
      "description": "Stores information about job openings and their statuses.",
      "columns": {
        "id": { "type": "uuid", "primaryKey": true, "default": "random" },
        "position": {
          "type": "uuid",
          "references": "positions.id",
          "onDelete": "cascade"
        },
        "description": { "type": "varchar", "length": 255, "notNull": true },
        "status": {
          "type": "enum",
          "values": ["open", "closed"],
          "notNull": true
        },
        "created_at": {
          "type": "timestamp",
          "withTimezone": true,
          "default": "now",
          "notNull": true
        }
      }
    },
    {
      "name": "employees",
      "description": "Stores employee details including personal and job-related information.",
      "columns": {
        "id": { "type": "uuid", "primaryKey": true, "default": "random" },
        "first_name": { "type": "varchar", "length": 255, "notNull": true },
        "last_name": { "type": "varchar", "length": 255, "notNull": true },
        "email": {
          "type": "varchar",
          "length": 255,
          "notNull": true,
          "unique": true
        },
        "phone": { "type": "varchar", "length": 255, "notNull": true },
        "position": {
          "type": "uuid",
          "references": "positions.id",
          "notNull": true
        },
        "hire_date": { "type": "date", "notNull": true },
        "status": {
          "type": "enum",
          "values": [
            "active",
            "inactive",
            "on_leave",
            "terminated",
            "probation"
          ],
          "notNull": true
        },
        "created_at": {
          "type": "timestamp",
          "withTimezone": true,
          "default": "now",
          "notNull": true
        }
      }
    },
    {
      "name": "chats",
      "description": "Stores chat sessions for communication purposes.",
      "columns": {
        "id": { "type": "uuid", "primaryKey": true, "default": "random" },
        "name": { "type": "varchar", "length": 100, "notNull": true },
        "created_at": {
          "type": "timestamp",
          "withTimezone": true,
          "default": "now",
          "notNull": true
        }
      }
    },
    {
      "name": "chat_messages",
      "description": "Stores messages exchanged in chat sessions.",
      "columns": {
        "id": { "type": "uuid", "primaryKey": true, "default": "random" },
        "created_at": {
          "type": "timestamp",
          "withTimezone": true,
          "default": "now",
          "notNull": true
        },
        "chat": {
          "type": "uuid",
          "references": "chats.id",
          "onDelete": "cascade",
          "notNull": true
        },
        "role": {
          "type": "enum",
          "values": ["user", "assistant", "system", "data"],
          "notNull": true
        },
        "content": { "type": "varchar", "length": 10000, "notNull": true }
      }
    }
  ]
}
